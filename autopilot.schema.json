{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "title": "Autopilot Workflow Schema",
    "type": "object",
    "required": ["stages"],
    "properties": {
      "stages": {
        "type": "array",
        "items": {
          "type": "object",
          "required": ["name", "actions"],
          "properties": {
            "name": {
              "type": "string",
              "description": "Stage name"
            },
            "actions": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["type"],
                "properties": {
                  "type": {
                    "type": "string",
                    "enum": ["message", "command"],
                    "description": "Action type: message or command"
                  },
                  "text": {
                    "type": "string",
                    "description": "Message text (required for message actions)"
                  },
                  "style": {
                    "type": "object",
                    "properties": {
                      "color": {
                        "type": "string",
                        "enum": ["red", "green", "yellow", "blue", "cyan", "magenta", "white"],
                        "description": "Text color"
                      },
                      "bold": {
                        "type": "boolean",
                        "description": "Bold text style"
                      },
                      "italic": {
                        "type": "boolean",
                        "description": "Italic text style"
                      }
                    },
                    "additionalProperties": false
                  },
                  "speed": {
                    "type": "integer",
                    "minimum": 0,
                    "description": "Typing speed in milliseconds per character"
                  },
                  "command": {
                    "type": ["string", "array"],
                    "description": "Shell command to execute (required for command actions)",
                    "items": {
                      "type": "string"
                    }
                  },
                  "sudo": {
                    "type": "boolean",
                    "description": "Run command with sudo (currently supported for remote only)"
                  },
                  "hide_stdout": {
                    "type": "boolean",
                    "description": "Hide command's stdout"
                  },
                  "hide_stderr": {
                    "type": "boolean",
                    "description": "Hide command's stderr"
                  },
                  "remote": {
                    "type": "object",
                    "properties": {
                      "host": {
                        "type": "string",
                        "description": "Remote SSH host"
                      },
                      "port": {
                        "type": "integer",
                        "minimum": 1,
                        "maximum": 65535,
                        "description": "Remote SSH port (default 22)"
                      },
                      "user": {
                        "type": "string",
                        "description": "Remote SSH user"
                      },
                      "password": {
                        "type": "string",
                        "description": "Remote SSH password (empty by default). Can use '$env:' prefix to mark value as environment variable"
                      }
                    },
                    "required": ["host", "user"],
                    "additionalProperties": false
                  },
                  "loop": {
                    "type": "object",
                    "properties": {
                      "times": {
                        "type": "integer",
                        "minimum": 1,
                        "description": "Number of iterations"
                      },
                      "delay": {
                        "type": "integer",
                        "minimum": 0,
                        "description": "Delay between iterations in milliseconds"
                      }
                    },
                    "required": ["times"],
                    "additionalProperties": false
                  }
                },
                "additionalProperties": false,
                "anyOf": [
                  { "required": ["text"] },
                  { "required": ["command"] }
                ]
              }
            }
          },
          "additionalProperties": false
        }
      }
    },
    "additionalProperties": false
  }